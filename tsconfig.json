{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node",
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "exclude": [
    "node_modules"
  ]
}
